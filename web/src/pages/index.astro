---
import Layout from '../layouts/layout.astro';
import logoImg from '../assets/logo-nlw.svg'
import GamesCarousel from '../components/games-carousel'
import { MagnifyingGlassPlus } from 'phosphor-react'
---

<Layout title="NLW eSports">
  <div class="max-w-[1344px] mx-auto my-20 flex flex-col items-center">
    <img src={logoImg} alt="Logo NLW" />

    <h1 class="text-white text-6xl font-black mt-20 bg-gradient-purple-green-yellow bg-clip-text">Seu <span class="text-transparent">duo</span> está aqui.</h1>

    <GamesCarousel />

    <div class="mt-8 pt-1 bg-gradient-purple-green-yellow self-stretch rounded-lg overflow-hidden">
      <div class="bg-[#2A2634] px-8 py-6 flex justify-between items-center">
        <div>
          <strong class="text-2xl text-white font-black block">Não encontrou seu duo?</strong>
          <span class="text-zinc-400">Publique um anúncio para encontrar novos players!</span>
        </div>
        <button class="py-3 px-4 bg-violet-500 text-white rounded hover:bg-violet-600 flex items-center gap-3">
          <MagnifyingGlassPlus size={24} />
          Publicar anúncio
        </button>
      </div>
    </div>
  </div>
</Layout>
